<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="100dp"/>
            <gradient
                android:angle="315"
                android:startColor="#7490BB"
                android:endColor="#2D538C"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <padding android:bottom="10dp"
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"/>
            <corners android:radius="100dp"/>
            <solid android:color="#fff" />
        </shape>
    </item>





</layer-list>